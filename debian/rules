#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1




configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	./autogen.sh
	./configure --prefix /usr
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/oml.sgml > oml.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/tmp.
	$(MAKE) DESTDIR=$(CURDIR)/debian/tmp install
	for APP in `find $(CURDIR) -mindepth 1 -maxdepth 1 -type d -not -name .git`; do \
		export APP=`echo $${APP} | sed s-.*/--`; \
		install -dm 755 $(CURDIR)/debian/$${APP}-oml2/usr/bin; \
		install -dm 755 $(CURDIR)/debian/$${APP}-oml2/usr/share/$${APP}-oml2; \
		test $${APP} = otg2 && install -dm 755 $(CURDIR)/debian/$${APP}-oml2/usr/lib/otg2; \
		test $${APP} = iperf && install -dm 755 $(CURDIR)/debian/$${APP}-oml2/usr/share/man/man1; \
		cd $(CURDIR)/debian/tmp; find . -name "*$${APP}*" -not -type d -exec mv {} $(CURDIR)/debian/$${APP}-oml2/{} \; ;\
	done
	cd $(CURDIR)/debian/tmp; find . -name "*otr2*" -not -type d -exec mv {} $(CURDIR)/debian/otg2-oml2/{} \;
	mv $(CURDIR)/debian/tmp/usr/bin/ripwave_monitor $(CURDIR)/debian/ripwavemon-oml2/usr/bin
	(cd debian/iperf-oml2/usr/bin; ln -s iperf-oml2 oml2-iperf; ln -s iperf-oml2 iperf_oml2)
	@echo "The following should only show empty directories:"
	@tree -F $(CURDIR)/debian/tmp
	install -dm 755 $(CURDIR)/debian/oml2-apps-omfdef/usr/share/omf-expctl-5.4/repository/oml/app
	find $(CURDIR)/debian -not -path "*/oml2-apps-omfdef/*" -name *.rb -exec install -Dm644 -t $(CURDIR)/debian/oml2-apps-omfdef/usr/share/omf-expctl-5.4/repository/oml/app {} \;

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
