defApplication('oml:app:trace', 'trace') do |app|

  app.version(2, 9, -0)
  app.shortDescription = 'Packet capture'
  app.description = %{'trace' uses libtrace to capture packets matching the
BPFilter, and report various header (IP, TCP, UDP, Radiotap,...) fields through
OML.

Note The pktid field in all MPs can be used to link information about the
multiple protocols encapsulated in the same packet, even in cases where multiple
packets have been received at the same time, which renders the timestamp field
useless as an identifier.
  }
  app.path = "@bindir@/trace-oml2"

  app.defProperty('filter', 'Filter expression BPFEXP', '-f',
		  :type => :string, :mnemonic => 'f')
  app.defProperty('snaplen', 'Snarf Bytes of data from each  packet', '-s',
		  :type => :int, :unit => 'Bytes', :mnemonic => 's')
  app.defProperty('promisc', 'Put  the  interface into promiscuous mode', '-p',
		  :type => 'boolean', :mnemonic => 'p')
  app.defProperty('interface', 'Interface to trace', '-i',
		  :type => :string, :mnemonic => 'i', :default => '"eth0"')
  app.defProperty('radiotap', 'Enable radiotap', '-r',
		  :type => 'boolean', :mnemonic => 'r')

  app.defMeasurement("ethernet") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('sourceMAC', :string,
		:description => 'Source MAC Address')
    m.defMetric('dstMAC', :string,
		:description => 'Destination MAC Address')
    m.defMetric('ethertype', :uint32, :unit => "Byte (<1536)" ,
		:description => 'EtherType (>= 1536) / 802.3 Length (< 1536); 16LSbs only')
  end
  app.defMeasurement("radiotap") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('tsft', :uint64, :unit => "microseconds",
		:description => 'Wireless Timer Syncronisation Function')
    m.defMetric('rate', :uint32, :unit => "500 kbps",
		:description => 'Wireless Rate')
    m.defMetric('freq', :uint32, :unit => "megahertz",
		:description => 'Wireless Channel Frequency')
    m.defMetric('sig_strength_dBm', :int32, :unit => "decibel-milliwatt",
		:description => 'Wireless Signal Strength in dB')
    m.defMetric('noise_strength_dBm',:int32, :unit => "decibel-milliwatt",
		:description => 'Wireless Noise Strength in dBm')
    m.defMetric('sig_strength', :uint32, :unit => "decibel",
		:description => 'Wireless Signal Strength in dB')
    m.defMetric('noise_strength', :uint32, :unit => "decibel",
		:description => 'Wireless Noise Strength in dB')
    m.defMetric('attenuation', :uint32,
		:description => 'Transmit Attenuation (0 -> max transmit power)')
    m.defMetric('attenuation_dB', :uint32, :unit => "decibel",
		:description => 'Transmit Attenuation in dB')
    m.defMetric('power', :int32, :unit => "decibel-milliwatt",
		:description => 'Transmit Power in dBm')
    m.defMetric('antenna', :uint32,
		:description => 'Wireless Antenna')
    m.defMetric('sourceMAC', :string,
		:description => 'Source MAC Address')
    m.defMetric('dstMAC', :string,
		:description => 'Destination MAC Address')
  end

  app.defMeasurement("ip") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('ip_tos', :uint32,
		:description => 'Type of Service')
    m.defMetric('ip_len', :uint32, :unit => "Byte",
		:description => 'Total Length')
    m.defMetric('ip_id', :int32, 'Identification')
    m.defMetric('ip_off', :uint32, :unit => "Byte",
		:description => 'IP Fragment offset (and flags)')
    m.defMetric('ip_ttl', :uint32, :unit => "hop",
		:description => 'Time to Live')
    m.defMetric('ip_proto', :uint32, :unit => "IANA number",
		:description => 'Protocol')
    m.defMetric('ip_sum', :uint32,
		:description => 'Checksum')
    m.defMetric('ip_src', :string,
		:description => 'Source Address')
    m.defMetric('ip_dst', :string,
		:description => 'Destination Address')
    m.defMetric('ip_sizeofpacket', :uint32, :unit => "Byte",
		:description => 'Size of the captured data')
    m.defMetric('ip_ts', :double,
		:description => 'Timestamp of the measurement')
  end

  app.defMeasurement("icmp") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('type', :uint32, :unit => "IANA number",
		:description => 'ICMPv6 type') # XXX: Only echo request (8) and replies (0)
    m.defMetric('sequ_nb', :uint32,
		:description => 'Sequence number for ping')
    m.defMetric('tv_sec', :uint32, :unit => "second",
		:description => 'Packet capture time (sec)')
    m.defMetric('tv_usec', :uint32, :unit => "microsecond",
		:description => 'Packet capture time (usec)')
  end

  app.defMeasurement("tcp") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('tcp_source', :uint32,
		:description => 'Source Port')
    m.defMetric('tcp_dest', :uint32,
		:description => 'Destination Port')
    m.defMetric('tcp_seq', :uint32,
		:description => 'TCP sequence Number')
    m.defMetric('tcp_ack_seq', :uint32,
		:description => 'Acknowledgment Number')
    m.defMetric('tcp_window', :uint32, :unit => "Byte",
		:description => 'Window Size')
    m.defMetric('tcp_checksum', :uint32,
		:description => 'Checksum')
    m.defMetric('tcp_urgptr', :uint32,
		:description => 'Urgent Pointer')
    m.defMetric('tcp_packet_size', :uint32, :unit => "Byte",
		:description => 'Size of the captured data')
    m.defMetric('tcp_ts', :double,
		:description => 'Timestamp of the measurement')
  end

  app.defMeasurement("udp") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('udp_source', :uint32,
		:description => 'Source Port')
    m.defMetric('udp_dest', :uint32,
		:description => 'Destination Port')
    m.defMetric('udp_len', :uint32, :unit => "Byte",
		:description => 'Length of Datagram')
    m.defMetric('udp_checksum', :uint32,
		:description => 'Checksum')
    m.defMetric('udp_ts', :double,
		:description => 'Timestamp of the measurement')
  end

  app.defMeasurement("ip6") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('ip6_src', :string,
		:description => 'Source Address')
    m.defMetric('ip6_dst', :string,
		:description => 'Destination Address')
    m.defMetric('ip6_ts', :double,
		:description => 'Timestamp of the measurement')
  end

  app.defMeasurement("ip6_mh") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('mh_type', :string,
		:description => 'BU or BAck')
    m.defMetric('sequ_nb', :uint32,
		:description => 'Binding sequence number')
    m.defMetric('tv_sec', :uint32, :unit => "second",
		:description => 'Packet capture time (sec)')
    m.defMetric('tv_usec', :uint32, :unit => "microsecond",
		:description => 'Packet capture time (usec)')
    m.defMetric('payload', :string,
		:description => 'CoA for BU, nothing for BAck')
  end

  app.defMeasurement("icmp6") do |m|
    m.defMetric('pktid', :guid,
		:description => 'Internal packet ID to link MPs')
    m.defMetric('type', :uint32,
		:description => 'ICMPv6 type') # XXX: Only echo request (128) and replies (129)
    m.defMetric('sequ_nb', :uint32,
		:description => 'Sequence number for ping')
    m.defMetric('tv_sec', :uint32, :unit => "second",
		:description => 'Packet capture time (sec)')
    m.defMetric('tv_usec', :uint32, :unit => "microsecond",
		:description => 'Packet capture time (usec)')
  end
end

